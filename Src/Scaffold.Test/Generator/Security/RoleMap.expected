using Blah.Core.Domain.Model;
using FluentNHibernate.Mapping;

namespace Blah.Core.Common.NHibernate
{
    public class RoleMap : ClassMap<Role>
    {
        public RoleMap()
        {
            Id(x => x.Id).GeneratedBy.Identity();
            Map(x => x.Name);
            HasManyToMany(x => x.Users)
                .Cascade.All()
                .Inverse();
        }
    }
}